---
import BaseLayout from '@layouts/BaseLayout.astro';

const user = Astro.locals?.user;
---

<BaseLayout title="Compte suspendu">
  <div class="banned-container">
    <div class="banned-content">
      <div class="banned-icon">
        ⛔
      </div>
      
      <h1>Compte suspendu</h1>
      
      <div class="ban-details">
        {user?.banned && (
          <>
            {user.banReason && (
              <div class="ban-reason">
                <h3>Raison de la suspension:</h3>
                <p>{user.banReason}</p>
              </div>
            )}
            
            {user.banExpires ? (
              <div class="ban-expiry">
                <h3>Suspension temporaire</h3>
                <p>
                  Votre compte sera réactivé le <strong>
                    {new Date(user.banExpires).toLocaleDateString('fr-FR', {
                      day: '2-digit',
                      month: 'long',
                      year: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    })}
                  </strong>
                </p>
              </div>
            ) : (
              <div class="ban-permanent">
                <h3>Suspension permanente</h3>
                <p>
                  Votre compte a été suspendu de manière permanente. 
                  Contactez un administrateur pour plus d'informations.
                </p>
              </div>
            )}
          </>
        )}
      </div>
      
      <div class="contact-info">
        <h3>Besoin d'aide ?</h3>
        <p>
          Si vous pensez que cette suspension est une erreur ou si vous souhaitez 
          faire appel de cette décision, contactez l'équipe d'administration.
        </p>
      </div>
      
      <div class="banned-actions">
        <button onclick="signOut()" class="btn btn-secondary">
          Se déconnecter
        </button>
        
        <a href="/" class="btn btn-outline">
          Retour à l'accueil
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .banned-container {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }

  .banned-content {
    text-align: center;
    max-width: 600px;
    width: 100%;
  }

  .banned-icon {
    font-size: 100px;
    margin-bottom: 30px;
  }

  .banned-content h1 {
    color: #dc3545;
    margin-bottom: 30px;
    font-size: 36px;
  }

  .ban-details {
    margin-bottom: 40px;
  }

  .ban-reason,
  .ban-expiry,
  .ban-permanent {
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 8px;
    padding: 25px;
    margin-bottom: 20px;
    text-align: left;
  }

  .ban-expiry {
    background: #fff3cd;
    border-color: #ffeaa7;
  }

  .ban-reason h3,
  .ban-expiry h3,
  .ban-permanent h3 {
    margin: 0 0 15px 0;
    color: #721c24;
    font-size: 18px;
  }

  .ban-expiry h3 {
    color: #856404;
  }

  .ban-reason p,
  .ban-expiry p,
  .ban-permanent p {
    margin: 0;
    color: #721c24;
    line-height: 1.5;
  }

  .ban-expiry p {
    color: #856404;
  }

  .contact-info {
    background: #e2e3e5;
    border: 1px solid #d6d8db;
    border-radius: 8px;
    padding: 25px;
    margin-bottom: 30px;
    text-align: left;
  }

  .contact-info h3 {
    margin: 0 0 15px 0;
    color: #383d41;
  }

  .contact-info p {
    margin: 0;
    color: #383d41;
    line-height: 1.5;
  }

  .banned-actions {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 12px 24px;
    border: 2px solid transparent;
    border-radius: 6px;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn-outline {
    background: transparent;
    border-color: #6c757d;
    color: #6c757d;
  }

  .btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }

  .btn-outline:hover {
    background: #6c757d;
    color: white;
  }

  @media (max-width: 768px) {
    .banned-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 200px;
    }
    
    .banned-content h1 {
      font-size: 28px;
    }
  }
</style>

<script>
  async function signOut() {
    try {
      const response = await fetch('/api/auth/signout', {
        method: 'POST'
      });
      
      if (response.ok) {
        window.location.href = '/';
      } else {
        console.error('Error signing out');
      }
    } catch (error) {
      console.error('Error signing out:', error);
    }
  }
</script>