        />
        <Button text="Soumettre" type="submit" preset="primary" />
      </Form>
    </Section>

    <!-- FAQ -->
    <Section id="faq-showcase" tag="div" preset="default">
      <Text tag="h3" iconLeft="mdi:help-box">
        Questions Fréquentes (FAQ)
      </Text>
      <Faq faqs={[
          {
            question: "Comment ajouter des styles personnalisés ?",
            answer: `
              <p>Tu peux passer des props à <code>Details.astro</code> (utilisé par Faq) pour changer la couleur, la bordure, etc.</p>
              <ul>
                <li><code>borderColor</code></li>
                <li><code>padding</code></li>
                <li><code>shadow</code></li>
